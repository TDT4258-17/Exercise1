# Example Makefile
#
# Exercise 1, TDT4258

LD=arm-none-eabi-gcc
AS=arm-none-eabi-as
OBJCOPY=arm-none-eabi-objcopy

LDFLAGS=-nostdlib
#ASFLAGS=-mcpu=cortex-m3 -mthumb -g
ASFLAGS=-mcpu=cortex-m3 -mthumb

LINKERSCRIPT=efm32gg.ld

default : 
	@echo Specify Program: baseline or improved

.PHONY : upload
upload :
	-eACommander.sh -r --address 0x00000000 -f "ex1.bin" -r

.PHONY : clean
clean :
	-rm -rf *.o *.elf *.bin *.hex
	

.PHONY : baseline
baseline :
	-rm -rf *.o *.elf *.bin *.hex
	${AS} ${ASFLAGS} ex1_baseline.s -o ex1.o
	${LD} -T ${LINKERSCRIPT} ex1.o -o ex1.elf ${LDFLAGS} 
	${OBJCOPY} -j .text -O binary ex1.elf ex1.bin
	-eACommander.sh -r --address 0x00000000 -f "ex1.bin" -r
	
.PHONY : improved
improved :
	-rm -rf *.o *.elf *.bin *.hex
	${AS} ${ASFLAGS} ex1_improved.s -o ex1.o
	${LD} -T ${LINKERSCRIPT} ex1.o -o ex1.elf ${LDFLAGS} 
	${OBJCOPY} -j .text -O binary ex1.elf ex1.bin
	
